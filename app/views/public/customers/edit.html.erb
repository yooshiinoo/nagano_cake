<div class="container">
  <h2>会員情報編集</h2>
  <div class="row">
    <%= form_with model: @customer, url:public_customers_information_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <div class="form-group">
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name,  autofocus: true, placeholder:@customer.last_name %>
              <%= f.text_field :first_name, autofocus: true, placeholder:@customer.first_name %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana,  autofocus: true, placeholder:@customer.last_name_kana %>
              <%= f.text_field :first_name_kana, autofocus: true, placeholder:@customer.first_name_kana %>
            </td>
          </tr>
        </div>
          <div class="form-group">
          <tr>
            <th>郵便番号</th>
            <td>
              <%= f.text_field :postal_code, autofocus: true, placeholder:@customer.postal_code %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>住所</th>
            <td>
              <%= f.text_field :address, autofocus: true, placeholder:@customer.address, :size => "80*50" %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>電話番号</th>
            <td>
              <%= f.text_field :telephone_number, autofocus: true, placeholder:@customer.telephone_number %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.text_field :email, autofocus: true, placeholder:@customer.email %>
            </td>
          </tr>
        </div>
      </table>
      <%= f.submit "編集内容を保存", class:"btn btn-sm btn-success" %>
      <%= link_to "退会する", public_customers_unsubscribe_path(current_customer), class:"btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>
