<div class="container">
  <div class="row">
    <h2>会員情報編集</h2>
    <table class="table">
      <%= form_with model: @customer, url:public_customer_path(current_customer) do |f| %>
        <div class="form-group">
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name,  autofocus: true, placeholder:@customer.last_name %>
              <%= f.text_field :first_name, autofocus: true, placeholder:@customer.first_name %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana,  autofocus: true, placeholder:@customer.last_name_kana %>
              <%= f.text_field :first_name_kana, autofocus: true, placeholder:@customer.first_name_kana %>
            </td>
          </tr>
        </div>
          <div class="form-group">
          <tr>
            <th>郵便番号</th>
            <td>
              <%= f.text_field :postal_code, autofocus: true, placeholder:@customer.postal_code %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>住所</th>
            <td>
              <%= f.text_field :address, autofocus: true, placeholder:@customer.address %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>電話番号</th>
            <td>
              <%= f.text_field :telephone_number, autofocus: true, placeholder:@customer.telephone_number %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.text_field :email, autofocus: true, placeholder:@customer.email %>
            </td>
          </tr>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="編集内容を保存" class="btn btn-success" data-disable-with="編集内容を保存">
        </div>
        <div class="form-group">
          <input type="delete" name="commit" value="退会する" class="btn btn-success" data-disable-with="退会する">
        </div>
        <%= link_to "退会する", unsubscribe_public_customer_path(current_customer), class:"btn btn-sm btn-success" %>
      <% end %>
    </table>
  </div>
</div>
