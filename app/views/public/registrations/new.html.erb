<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>新規会員登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <div class="field">
            <tr>
              <th><%= f.label "名前" %></th>
              <td class="sign-up-smell-cell">(姓)</td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %></td>
              <td class="sign-up-smell-cell">(名)</td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "道子" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "フリガナ" %></th>
              <td class="sign-up-smell-cell">(セイ)</td>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "レイワ" %></td>
              <td class="sign-up-smell-cell">(メイ)</td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "ミチコ" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "メールアドレス" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "郵便番号(ハイフンなし)" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "0000000" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "住所" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.text_field :address, autofocus: true, autocomplete: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "電話番号(ハイフンなし)" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "0000000000" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "パスワード(6文字以上)" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.password_field :password, autofocus: true %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <th><%= f.label "パスワード(確認用)" %></th>
              <td class="sign-up-smell-cell"></td>
              <td><%= f.password_field :password_confirmation, autofocus: true %></td>
            </tr>
          </div>
        </table>
        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
  　　　　　</div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h2>既に登録済みの方</h2>
  </div>
  <div class="row">
    <div class="col-md-5">
      <p>
        <%= link_to "こちら", new_customer_session_path %> からログインしてください。
      </p>
    </div>
  </div>
</div>
