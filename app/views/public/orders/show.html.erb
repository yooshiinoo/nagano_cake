<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-7">
      <h4><strong>注文情報</strong></h4>
      <table class="table table-bordered">
        <tr>
          <th bgcolor="#EEEEEE" >注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th bgcolor="#EEEEEE" >配送先</th>
          <td>〒
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th bgcolor="#EEEEEE" >支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th bgcolor="#EEEEEE" >ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <h4><strong>請求情報</strong></h4>
      <table class="table table-bordered">
        <tr>
          <th bgcolor="#EEEEEE" >合計金額</th>
          <td>
            <% @total = @order.total_payment - @order.shipping_cost %>
            <%= @total %>
            </td>
        </tr>
        <tr>
          <th bgcolor="#EEEEEE" >配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th bgcolor="#EEEEEE" ><strong>ご請求額</strong></th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h4><strong>注文内容</strong></h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th bgcolor="#EEEEEE" >商品</th>
            <th bgcolor="#EEEEEE" >単価(税込)</th>
            <th bgcolor="#EEEEEE" >個数</th>
            <th bgcolor="#EEEEEE" >小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>