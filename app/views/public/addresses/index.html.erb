<div class="container">
<h2>配送先登録/一覧</h2>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @address, url:public_addresses_path, method: :post do |f| %>
        <table>
          <tr>
            <th style="width: 35%" ><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </tr>
          <tr>
            <th style="width: 35%" ><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "50*50" %></td>
          </tr>
          <tr>
            <th style="width: 35%" ><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name, placeholder:"令和道子" %></td>
          </tr>
        </table>
        <div class="float-right"><%= f.submit "新規登録", class:"btn btn-success" %></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th bgcolor="#EEEEEE" >郵便番号</th>
            <th bgcolor="#EEEEEE" >住所</th>
            <th bgcolor="#EEEEEE" >宛名</th>
            <th bgcolor="#EEEEEE" colspan"2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address), class:"btn btn-success" %>
                <%= link_to "削除する", public_address_path(address), method: :delete, class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>