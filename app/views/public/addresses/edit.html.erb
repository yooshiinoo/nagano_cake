<div class="container">
  <h2>配送先編集</h2>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @address, url:public_address_path(@address), method: :patch do |f| %>
        <table>
          <tr>
            <th style="width: 35%" ><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code, placeholder: @address.postal_code %></td>
          </tr>
          <tr>
            <th style="width: 35%" ><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, placeholder: @address.address, :size => "50*50" %></td>
          </tr>
          <tr>
            <th style="width: 35%" ><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name,  placeholder: @address.name %></td>
          </tr>
        </table>
        <div class="float-right"><%= f.submit "変更内容を保存", class:"btn btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>
