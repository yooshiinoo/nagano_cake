<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <table class="table">
        <tr>
          <th class="text-center">ジャンル検索</th>
        </tr>
        <% @guides.each do |guide| %>
          <tr>
            <td>
              <%= link_to public_items_path(@item), class: "nav-link text-dark" do %>
                <%= guide.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-8 mx-auto">
      <h2>商品一覧<h5>(全<%= @total_items.count %>件)</h5></h2>
      <div class="row">
        <div class="col-md-2">
          <table class="table">
            <% @items.limit(8).each do |item| %>
              <td>
                <%= link_to public_item_path(item), class: "nav-link text-dark" do %>
                  <%= image_tag item.image, size: "150x100" %><br>
                  <%= item.name %><br>
                  ￥<%= item.with_tax_price %><br>
                <% end %>
              </td>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @items %>
</div>