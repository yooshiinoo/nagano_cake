<div class="container">
  <h2>注文履歴一覧</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th bgcolor="#EEEEEE">購入日時</th>
            <th bgcolor="#EEEEEE">購入者</th>
            <th bgcolor="#EEEEEE">注文個数</th>
            <th bgcolor="#EEEEEE">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.reverse.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id), class: "nav-link text-dark" do %>
                  <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>