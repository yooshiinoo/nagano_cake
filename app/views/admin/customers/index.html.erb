<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td>
             <%= link_to admin_customer_path(@customers), class: "nav-link text-light" do %>
               <%= customer.last_name %><% customer.first_name %>
             <% end %>
           </td>
           <td><%= customer.email %></td>
           <td>
             <% if customer.is_deleted == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
           </td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
