<div class="container">
  <div class="row">
    <h2><%= @customer.full_name %>さんの会員詳細</h2>
    <table class="table">
      <% @customer.each do |customer| %>
        <tr>
          <th>会員ID</th>
          <td><%= customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= customer.last_name %></td><td><% customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= customer.last_name_kana %></td><td><% customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if customer.is_deleted == true %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      <tr>
        <th colspan="3"></th>
        <%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-sm btn-success" %>
        <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-sm btn-success" %>
      </tr>
    </table>
  </div>
</div>
