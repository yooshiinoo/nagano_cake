<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
      <div class="form-group">
        <tr>
          <th><%= f.label "ジャンル名" %></th>
          <th><%= f.text_field :name, placeholder:"ジャンル名" %></th>
          <th>
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </th>
        </tr>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <table class="table">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE" >ジャンル</th>
          <th bgcolor="#EEEEEE" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(@genres.ids), class:"btn btn-sm btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
