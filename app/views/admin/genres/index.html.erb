<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url:admin_genres_path do |f| %>
      <div class="form-group">
        <tr>
          <th><%= f.label "ジャンル名" %></th>
          <th><%= f.text_field :name, class: "col-xs-12" %></th>
          <th>
            <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="新規登録">
          </th>
        </tr>
      </div>
    <% end %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(@genres.ids), class:"btn btn-sm btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
