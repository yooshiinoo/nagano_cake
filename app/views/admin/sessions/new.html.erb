<div class="container">
  <div class="row">
    <div class="col-ms-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <tr>
            <th><%= f.label "メールアドレス" %></th>
            <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
          </tr>
        </div>
        <div class="field">
          <tr>
            <th><%= f.label "パスワード" %></th>
            <th><%= f.password_field :password, autocomplete: "current-password" %></th>
          </tr>
        </div>
        <div class="actions">
          <input type="submit" name="commit" value="Log in" class="btn btn-sm btn-primary" data-disable-with="ログイン">
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
