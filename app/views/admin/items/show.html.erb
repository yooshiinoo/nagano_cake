<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col sm-3">
      <%= image_tag @item.image %>
    </div>
    <div class="col sm-5">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <th>
              <%= (@item.price * 1.1).floor %>
              ( <%=@item.price %> )円
          </th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th>
            <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-secondary">販売停止中</p>
            <% end %>
          </th>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-sm btn-success" %>
    </div>
  </div>
</div>