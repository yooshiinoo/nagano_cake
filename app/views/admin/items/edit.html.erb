<div class="container">
  <h2>商品編集</h2>
  <div class="row">
    <div class="col-md-5.5 mx-auto">
      <%= form_with model: @item, url:admin_item_path do |f| %>
      <div class="form-group">
        <tr>
          <th><%= f.label "商品画像" %></th>
          <td><%= f.file_field :image, placeholder: "image", accept: "image/*" %></td>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th><%= f.label "商品名" %></th>
          <td><%= f.text_field :name, autofocus: true, placeholder:@item.name %></td>
        </tr>
      </div>
      <div class="form-group d-flex align-items-start">
        <tr>
          <th><%= f.label "商品説明" %></th>
          <td><%= f.text_area :introduction, :rows => "3", autofocus: true, placeholder:@item.introduction %></td>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th><%= f.label "ジャンル" %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => @item.genre.name %></td>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th><%= f.label "税抜価格" %></th>
          <td><%= f.text_field :price, placeholder:@item.price%>円</td>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th><%= f.label "販売ステータス" %></th>
          <td>
            <%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中" %>
          </td>
        </tr>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>