<div class="container">
  <div class="row">
      <h2>商品編集</h2>
      <%= form_with model: @item, url:admin_item_path do |f| %>
        <div class="form-group">
            <tr>
                <th><%= f.label "商品画像" %></th>
                <th><%= f.file_field :image, placeholder: "image", accept: "image/*" %></th>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label "商品名" %></th>
                <th><%= f.text_field :name, autofocus: true, placeholder:@item.name %></th>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label "商品説明" %></th>
                <th><%= f.text_field :introduction, autofocus: true, placeholder:@item.introduction %></th>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label "ジャンル" %></th>
                <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => @item.genre.name %></th>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label "税抜価格" %></th>
                <th><%= f.text_field :price, placeholder:@item.price%>円</th>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label "販売ステータス" %></th>
                <th>
                    <%= f.radio_button :is_active, true, checked: true %>
                    <%= f.label :is_active, "販売中" %>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, "販売停止中" %>
                </th>
            </tr>
            <div class="form-group">
                <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="変更を保存">
            </div>
        </div>
      <% end %>
  </div>
</div>