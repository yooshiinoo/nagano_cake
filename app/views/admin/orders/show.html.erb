<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
    <div class="col-xs-12">
      <table class="table">
        <% @order.each do |order| %>
          <tr>
            <th>購入者</th>
            <td>
              <%= link_to admin_customer_path(@orders), class: "nav-link text-light" do %>
                <%= full_name(order.customer) %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= full_address(order) %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= from_with model: @order, url:admin_order_path do |f| %>
                <%= f.select :status, Order.statuses.keys,class:"status" %>
                <%= f.submit "更新", class:"btn btn-sm btn-success"%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.with_tax_price %></td>
              <td><%= order_detail.item.count %></td>
              <td><%= order_detail.subtotal %></td>
              <td>
                <%= from_with model: @order_detail, url:admin_order_path do |f| %>
                  <%= f.select :making_status, OrderDetail.making_statuses.keys,class:"making_status" %>
                  <%= f.submit "更新", class:"btn btn-sm btn-success"%>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 offset-1">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>